@page
@model LoginModel

<!-- Spinner Start -->
<div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
    <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;"></div>
</div>
<!-- Spinner End -->
<h1>@ViewData["Title"]</h1>
<!-- Navbar Start -->
<nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top p-0">
    <a asp-area="User" asp-page="/Home/Index" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
        <h1 class="m-0">Greenhouse Climate Controller</h1>
    </a>
    <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
    <ul class="navbar-nav">
    </div>
    <div class="collapse navbar-collapse" id="navbarCollapse">
    </div>
</nav>
<!-- Navbar End -->
<!-- Carousel Start -->
<div class="container-fluid p-0 wow fadeIn" data-wow-delay="0.1s">
    <div id="header-carousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="w-100" src="~/img/carousel-1.jpg" alt="Image">
                <div class="carousel-caption">
                    <div class="col-md-4">
                        <section>
                            <form id="account" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-light"></div>
                                <div class="form-floating" style="padding-bottom: 20px">
                                    <p>Email</p>
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                    <span asp-validation-for="Input.Email" class="text-light"></span>
                                </div>
                                <div class="form-floating">
                                    <p>Password</p>
                                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                    <span asp-validation-for="Input.Password" class="text-light"></span>
                                </div>
                                <div style="padding-top:20px">
                                    <button id="login-submit" type="submit" class="w-50 btn btn-lg btn-light">Log in</button>
                                </div>
                                <div style="padding-top: 10px">
                                    <p>
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-white">Register as a new user</a>
                                    </p>
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Carousel End -->


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
